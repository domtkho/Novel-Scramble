<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
    <%= devise_error_messages! %>
    <h2 class="form-signin-heading">Sign up</h2>
    <%= f.email_field :email, autofocus: true, class: 'form-control top-row', placeholder: "Email address", required: true %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control centre-rows', placeholder: "Password (#{@minimum_password_length} characters minimum)", required: true %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control bottom-row', placeholder: "Password Confirmation" , required: true %>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %></div>
    <%= render "devise/shared/links"%>
  <% end %>

</div>


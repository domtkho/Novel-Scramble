<h1>Game Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Thread name</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_threads.each do |game_thread| %>
      <tr>
        <td><%= link_to game_thread.thread_name, game_thread %></td>
        <td><%= game_thread.genre %></td>
        <td><%= link_to 'Show', game_thread %></td>
        <td><%= link_to 'Edit', edit_game_thread_path(game_thread) %></td>
        <td><%= link_to 'Destroy', game_thread, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Game thread', new_game_thread_path, {class: "btn btn-warning"} %>

<p id="notice"><%= notice %></p>
<header>
  <h1><strong><%= @game_thread.thread_name %></strong></h1>
  <h2><%= @game_thread.genre %></h2>
</header>

<% @scripts.each do |script| %>
  <div class="row">
    <div class="col-md-1">
      <%= image_tag((script.user.avatar), :class => "avatar-thumbnail") %>
    </div>
    <div class="script col-md-11">
      <p><%= script.content %></p>
      <span><%= link_to 'Edit', edit_script_path %></span>
      <span>Created by: <%= link_to script.user.first_name, "/users/#{script.user.id}" %></span>
      <span class="time-stamp pull-right"><%= script.created_at %></span>
    </div>
  </div>
<% end %>

<% if user_signed_in? %>
  <div class="add-script">
    <%= form_for(@script) do |f| %>
      <div class="field">
        <%= f.label :content, "Add New Script:" %><br>
        <%= f.text_area :content %>
      </div>
      <div class="field">
        <%= f.hidden_field :game_thread_id, {:value => @game_thread.id} %>
      </div>
      <div class="field">
        <%= f.hidden_field :user_id, {:value => current_user.id} %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>Sign in to post scripts!</p>
<% end %>

<%= link_to 'Back to lobby', game_threads_path, {"class" => "btn btn-primary"} %>

